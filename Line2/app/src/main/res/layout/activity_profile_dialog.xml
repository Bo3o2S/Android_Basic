<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="210dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center">
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="120dp" />
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="10sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">
            <ImageView
                android:id="@+id/chatroom_profiledialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chats_friendlist"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/call_profiledialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/call_friendlist"
                android:layout_weight="1"/>

            <!--android:src="@drawable/videocall_friendlist"-->
            <ImageView
                android:id="@+id/videocall_profiledialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sms_friendlist"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>